                <args>
                    <modules>
                        <banners after="Mage_Adminhtml">RonisBT_Banners_Adminhtml</banners>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <cms>
                <children>
                    <ronisbt_banners module="ronisbt_banners">
                        <title>Homepage banners</title>
