<?xml version="1.0" ?>
<config>
    <modules>
        <RonisBT_Banners>
            <version>0.2.0</version>
        </RonisBT_Banners>
    </modules>
    <global>
        <models>
            <ronisbt_banners>
                <class>RonisBT_Banners_Model</class>
                <resourceModel>banners_resource</resourceModel>
            </ronisbt_banners>
            <banners_resource>
                <class>RonisBT_Banners_Model_Resource</class>
                <entities>
                    <table_banners>
                        <table>ronisbt_banners_entities</table>
                    </table_banners>
                </entities>
            </banners_resource>
            <status_source>
                <class>RonisBT_Banners_Model_StatusSource</class>
            </status_source>
        </models>
        <blocks>
            <ronisbt_banners>
                <class>RonisBT_Banners_Block</class>
            </ronisbt_banners>
        </blocks>
        <resources>
            <banners_setup>
                <setup>
                    <module>RonisBT_Banners</module>
                </setup>
            </banners_setup>
        </resources>
        <helpers>
            <ronisbt_banners>
                <class>RonisBT_Banners_Helper</class>
            </ronisbt_banners>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <ronisbt_banners>
                    <file>ronisbt_banners.xml</file>
                </ronisbt_banners>
            </updates>
        </layout>
    </frontend>
